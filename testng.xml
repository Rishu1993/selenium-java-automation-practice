<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AutomationSuite" parallel="tests" thread-count="3">
	<listeners>
    <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    <listener class-name="utils.TestListener" />
</listeners>
  <test name="SeleniumTests">
	    	    <classes>
      <class name="tests.ProductsTest"/> 
  </classes>
  </test>
  
  <test name="ProductSearchTest">
	    	    <classes>
      <class name="tests.ProductSearch"/> 
  </classes>
  </test>
  
    <test name="SmokeTest">
		<groups>
			<run>
				<include name="Smoke"/>
			</run>
		</groups>
	    	    <classes>
      <class name="tests.SeleniumDocsTest"/> 
  </classes>
  </test>
  

</suite>